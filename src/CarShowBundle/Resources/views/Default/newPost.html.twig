{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/Auto/css/index.css') }}" rel="stylesheet" type="text/css"/>

{% endblock %}

{% block sidepanel %}

    {% if car is defined %}
        <br>
        {% include '@CarShow/widget/backToMainCarPage.html.twig' with {'car' : car} %}
        <br>
        {% include '@Main/widgets/carInfoWidget.html.twig' with {'car' : car } %}
        {% include '@CarShow/widget/carMenu.html.twig' with {'car' : car } %}

    {% endif %}

    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="h2">{{ title }}</div>
            {{ form_start(form, { 'attr' : {'class' : 'form-horizontal'}}) }}

            <div class="form-group">
                {{ form_label(form.title,'Pavadinimas', { 'label_attr' : { 'class' : 'control-label col-sm-2'}  }) }}
                {{ form_errors(form.title) }}
                <div class="col-sm-10">
                    {{ form_widget(form.title, { 'attr' : { 'class' : 'form-control'}  }) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.mileage,'Kilometra≈æas', { 'label_attr' : { 'class' : 'control-label col-sm-2'}  }) }}
                {{ form_errors(form.mileage) }}
                <div class="col-sm-10">
                    {{ form_widget(form.mileage, { 'attr' : { 'class' : 'form-control'}  }) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.date,'Data', { 'label_attr' : { 'class' : 'control-label col-sm-2'}  }) }}
                <div class="col-sm-10">
                    <div class="input-group" id="time_input">
                        {{ form_widget(form.date, { 'attr' : {'class' : 'form-control' } }) }}
                    </div>
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.text,'Informacija', { 'label_attr' : { 'class' : 'control-label'}  }) }}
                {{ form_errors(form.text) }}
                {{ form_widget(form.text, { 'attr' : { 'class' : '   tinymce'}  }) }}

            </div>

            <div class="form-group">
                {{ form_label(form.submit) }}
                {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn btn-success btn-block'}  }) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}



{% block javascripts %}
    <script src="{{ asset('bundles/Auto/js/datePicker.js') }}" type="text/javascript"></script>
{% endblock %}
