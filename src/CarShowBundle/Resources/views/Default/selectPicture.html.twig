{% extends 'base.html.twig'  %}

{% block stylesheets %}
    <link href="{{asset('bundles/imagePicker/css/image-picker.css')}}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/Auto/css/index.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block sidepanel %}

    <br>
    {% include '@CarShow/widget/backToMainCarPage.html.twig' with {'car' : car} %}
    <hr>
    {% include '@Main/widgets/carInfoWidget.html.twig' %}

    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container-fluid">

        <h2>Select new main picture</h2>
        <p>Select picture you want to be your car amin picture and press "save" button</p>
        {{ form_start(form, { 'attr' : {'class' : 'form-horizontal'}}) }}

        {{ form_widget(form.mainPhoto) }}

        {{ form_widget(form.submit) }}
    </div>
{% endblock body %}

{% block javascripts %}
    <script src="{{asset('bundles/imagePicker/js/image-picker.js')}}" type="text/javascript"></script>
    <script type="text/javascript">
        $(".imagePicker").imagepicker();
    </script>

{% endblock %}