{% extends 'base.html.twig' %}

{% block sidepanel %}
    <div class="panel panel-default">
        <div class="panel-body">

            <ul class="nav nav-pills  nav-stacked">
                <li role="presentation">
                    Total {{ pagination.getTotalItemCount }} pages
                </li>
                <li role="presentation">
                    <a href="{{ url('multi_blog_new_page') }}">{% trans %}mb_create_new_page{% endtrans %}</a>
                </li>
            </ul>
        </div>
    </div>
    {{ parent() }}
{% endblock %}

{% block body %}

    <div class="row">
        <ul class="nav nav-tabs">
            <li {% if pagination.isSorted('time') %} class="active"{% endif %}>{{ knp_pagination_sortable(pagination, 'Date', 'time') }}</li>
            <li {% if pagination.isSorted('title') %} class="active"{% endif %}>{{ knp_pagination_sortable(pagination, 'Title', 'title') }}</li>
        </ul>

    </div>

    {% for page in pagination %}
        {% include '@MultiBlog/Page/page_row.html.twig' with {'page' : page} %}
        <hr>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(pagination, 'StackExchangeBundle::pagination.html.twig') }}
    </div>

{% endblock %}