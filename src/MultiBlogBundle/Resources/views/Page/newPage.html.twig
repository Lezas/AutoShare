{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/tagEditor/css/jquery.tag-editor.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        {{ form_start(form, { 'attr' : {'class' : 'form-horizontal'}}) }}
        <h3>Page Title</h3>
        <div class="form-group">
            {{ form_errors(form.title) }}
            {{ form_widget(form.title, { 'attr' : { 'class' : 'form-control'}  }) }}

        </div>
        <h3>Page Body</h3>
        <div class="form-group">
            {{ form_widget(form.body) }}
        </div>

        <h3>Tags</h3>
        <div class="form-group">
            {{ form_widget(form.tags) }}
        </div>

        <div class="form-group">
            {{ form_label(form.submit) }}
            {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn btn-success btn-block'}  }) }}
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}

    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/tagEditor/js/jquery.caret.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/tagEditor/js/jquery.tag-editor.min.js') }}" type="text/javascript"></script>

    <script>
        $('#page_tags').tagEditor();
    </script>
    {{ elfinder_tinymce_init4('default') }}
    {{ tinymce_init() }}
{% endblock %}