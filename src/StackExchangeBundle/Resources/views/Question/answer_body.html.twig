<div class="row">
    <div class="col-sm-1 se_answer_vote_container">
        <div class="row">
            <div class="text-center">
                <a href="#" class="se_answer_answer_vote" data-url="{{ url('stack_exchange_new_answer_vote', {'id' : answer.id})}}" data-score="1">
                    <span class="glyphicon glyphicon-chevron-up"></span>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="text-center se_answer_vote_score_holder">
                {{ answer.score }}
            </div>
        </div>

        <div class="row">
            <div class="text-center">
                <a href="#" class="se_answer_answer_vote" data-url="{{ url('stack_exchange_new_answer_vote', {'id' : answer.id})}}" data-score="-1">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </div>
        </div>
    </div>
    <div class="col-sm-11">

        <div class="row">
            {{ answer.text | raw }}
        </div>

        <div class="row">
            <div class="pull-left">
                <a href="#">share</a>
                <a href="#">edit</a>
            </div>
            <div class="col-sm-4 pull-right">
                Created: {{ answer.createdAt | date('Y-m-d') }}<br>
                <a href="#"> {{ answer.author.foto }}</a>
                <a href="#">{{ answer.author }}</a>
            </div>
        </div>
    </div>
</div>