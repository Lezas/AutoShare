<div class="row">
    <div class="col-sm-1">
        <div class="row">
            <div class="text-center">
                {{ question.score }} <br> votes
            </div>
        </div>
        <div class="row">
            <div class="text-center">
                {{ question.answers | length }} <br>
                answers
            </div>
        </div>
        <div class="row">
            <div class="text-center">
                <br>
                0 views
            </div>
        </div>
    </div>

    <div class="col-sm-11">
        <div class="row">
            <h3 style="margin: 0px 0px 5px 0px;"><a href="{{ path('question', {'id' : question.id}) }}">{{ question.title }}</a></h3>
        </div>

        <div class="row">
            {{ question.text|length > 200 ? question.text | slice(0, 200)  | striptags ~ '...' : question.text | striptags}}
        </div>
        <div class="row">
            {% for tag in question.tags %}
                {% include 'StackExchangeBundle:Tag:tag_wrap.html.twig' with {'tag' : tag } %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-sm-4 pull-right">
                Asked: {{ question.createdAt | date('Y-m-d H:i') }}<br>
                <a href="#"> {{ question.author.foto }}</a>
                <a href="#">{{ question.author }}</a>
            </div>
        </div>
    </div>
</div>