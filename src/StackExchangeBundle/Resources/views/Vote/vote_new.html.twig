<div class="stack_exchange_vote_form_holder">
    {{ form_start(form,  { 'attr': {'class': 'stackExchange_vote_form'} }) }}

    {% block stack_exchange_form_fields %}
        {{ form_errors(form) }}
        {{ form_errors(form.value) }}
        {{ form_widget(form.value) }}

        {{ form_rest(form) }}
    {% endblock %}

    <div class="stack_exchange_submit">
        {% block stac_exchange_form_submit %}
            <input type="submit"/>
        {% endblock %}
    </div>

    {{ form_end(form) }}
</div>
