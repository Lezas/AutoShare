{% extends 'base.html.twig'  %}
{% block stylesheets %}
    <link href="{{asset('bundles/Auto/css/autoblog.css')}}" rel="stylesheet" type="text/css"/>
    <link href="{{asset('bundles/Auto/css/index.css')}}" rel="stylesheet" type="text/css"/>
    <link href="{{asset('bundles/Comments/css/comments.css')}}" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block body %}

    {# Blog head#}
    <div class="header-bg" style="background: url({{ asset('uploads/foto/' ~ auto.foto) }}); background-size: cover; background-position: center">

        <div class="pull-down pull-left" style="padding: 0 20px 0 20px; background: darkorange;">
            <h2 style="color: white; padding: 0; margin: 1px">{{ auto.year | date('Y') }} {{ auto.brand }} {{ auto.model }} </h2>
        </div>

    </div>
    ---------------



        <div class="container-fluid">
            {{ form_start(form, { 'attr' : {'class' : 'form-inline'}}) }}

            <div class="form-group">
                {{ form_label(form.mileage,'Mileage')  }}
                {{ form_errors(form.mileage) }}

                    {{ form_widget(form.mileage, { 'attr' : { 'class' : 'form-control'}  }) }}

            </div>
            <div class="form-group">
                {{ form_label(form.date,'Service date')  }}

                    <div class="input-group" id="time_input">
                        {{ form_widget(form.date, { 'attr' : {'class' : 'form-control' } }) }}
                    </div>

            </div>

            <div class="form-group">
                {{ form_label(form.text,'Info', { 'label_attr' : { 'class' : 'control-label'}  })  }}
                {{ form_errors(form.text) }}
                {{ form_widget(form.text) }}

            </div>

            <div class="form-group">
                {{ form_label(form.submit) }}
                {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn btn-success btn-block'}  }) }}
            </div>
            {{ form_end(form) }}
        </div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>Mileage and date</th>
            <th>Info</th>
        </tr>
    </thead>
    <tbody>
    {% for history in serviceHistory %}
        <tr>
            <td class="col-md-1">
                    <a href="{{ path('car_history_edit', { 'serviceHistory': history.id, 'carId' : auto.id }) }}" class="btn btn-default btn-xs ">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a href="{{ path('car_history_remove', { 'serviceHistory': history.id}) }}" class="btn btn-default btn-xs ">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
            </td>
            <td class="col-md-2">
                {{ history.mileage }}<br>
                {{ history.date | date("Y-m-d") }}
            </td>
            <td class="col-md-9">
                {{ history.text }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock body %}

