{% trans_default_domain 'FOSUserBundle' %}
<div class="col-md-9 col-md-offset-2" >
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}
    <div class="form-group">
        {{ form_label(form.current_password,'Current password', { 'label_attr' : { 'class' : 'control-label col-sm-3'}  }) }}
        {{ form_errors(form.current_password) }}
        <div class="col-sm-9">
            {{ form_widget(form.current_password, { 'attr' : { 'class' : 'form-control'}  }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.plainPassword.first,'New password', { 'label_attr' : { 'class' : 'control-label col-sm-3'}  }) }}
        {{ form_errors(form.plainPassword.first) }}
        <div class="col-sm-9">
            {{ form_widget(form.plainPassword.first, { 'attr' : { 'class' : 'form-control'}  }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.plainPassword.second,'Repeat password', { 'label_attr' : { 'class' : 'control-label col-sm-3'}  }) }}
        {{ form_errors(form.plainPassword.second) }}
        <div class="col-sm-9">
            {{ form_widget(form.plainPassword.second, { 'attr' : { 'class' : 'form-control'}  }) }}
        </div>
    </div>
    <div class="form-group">
        <input class="btn btn-default btn-block" type="submit" value="{{ 'change_password.submit'|trans }}"/>
    </div>

{{ form_end(form) }}
</div>